<UserControl x:Class="DialogService.Views.Controls.Ellipse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogService.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Ellipse Stretch="Fill" Fill="Red"/>
		<Button Width="150" Height="40" Content="X" FontSize="20" Margin="20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Command="{Binding OutCommand}" />
	</Grid>
</UserControl>
